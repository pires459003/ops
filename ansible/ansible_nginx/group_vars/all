---

# NTP 服务地址
ntpserver_01: 1.cn.pool.ntp.org
ntpserver_02: 0.asia.pool.ntp.org
ntpserver_03: 1.asia.pool.ntp.org

# Nginx Repo 安装包
ngx_6_repo_url: http://nginx.org/packages/centos/6/noarch/RPMS/nginx-release-centos-6-0.el6.ngx.noarch.rpm
ngx_7_repo_url: http://nginx.org/packages/centos/7/noarch/RPMS/nginx-release-centos-7-0.el7.ngx.noarch.rpm

# 网站域名
server_name: www.vqiu.cn

# 访问日志
access_log_dir: /data/logs

# 网站源码目录
document_root: /data/www/{{ server_name }}

# Nginx 运行用户
nginx_owner: nginx

# 启用加密 true,不启用加密 false, 启用加密时需要将证书放入 roles/nginx/files 目录(保持文件名为与server_name 一致)
ssl_on: true
#ssl_on: false

# 网站密钥存放路径
ssl_dir: /etc/nginx/ssl/{{ server_name }}

# dhparam.pem 位数[推荐：4096]
dhparam_bit: 2048
